         "hbbz2/hbbz2.hbp"            ,; /* uses: bz2 (external) */
         "hbclipsm/hbclipsm.hbp"      ,;
         "hbnetio/hbnetio.hbp"        ,;
         "rddbmcdx/hbbmcdx.hbp"       }
